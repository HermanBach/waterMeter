@page
@model waterMeter.Pages.MetersDatas.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h3>Редактировать замену счётчика</h3>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MetersData.Id" />
            <div class="form-group">
                <label asp-for="MetersData.Value" class="control-label"></label>
                <input asp-for="MetersData.Value" class="form-control" />
                <span asp-validation-for="MetersData.Value" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MetersData.TestimonyDate" class="control-label"></label>
                <input asp-for="MetersData.TestimonyDate" class="form-control" />
                <span asp-validation-for="MetersData.TestimonyDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Назад к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
