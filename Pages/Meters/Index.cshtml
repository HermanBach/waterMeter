@page
@model waterMeter.Pages.Meters.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h3>Список счётчиков</h3>

<p>
    <a asp-page="Create">Добавить счётчик</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Заводской номер
            </th>
            <th>
                Дата последней поверки
            </th>
            <th>
                Дата следующей поверки
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Meter) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FactoryNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastVerification)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NextVerification)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Редактировать</a>
                <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
