@page
@model waterMeter.Pages.Apartments.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Apartment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Apartment.Id" />
            <div class="form-group">
                <label asp-for="Apartment.Name" class="control-label"></label>
                <input asp-for="Apartment.Name" class="form-control" />
                <span asp-validation-for="Apartment.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Apartment.Meter.Id" class="control-label"></label>
                <select asp-for="Apartment.Meter.Id" class="form-control"
                        asp-items="@Model.MetersList">
                    <option value="">-- Select Department --</option>
                </select>
                <span asp-validation-for="Apartment.Meter.Id" class="text-danger" />
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
